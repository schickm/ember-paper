<h2>Simple dropdown menu</h2>

  <p>Note that applying the class <code class="paper">.md-menu-origin</code> and <code class="paper">md-menu-align-target</code>
      attributes ensure that the menu elements align</p>

  <div layout-align="center center" layout="column">
      {{#paper-menu width=4 as |menu|}}
        {{#paper-button target=menu action="toggleMenu" icon-button=true}}{{paper-icon "local-phone" class="md-menu-origin"}}{{/paper-button}}
      {{else}}
        {{#each items as |item|}}
          {{#paper-menu-item action="openSomething"}}
            {{paper-icon item.icon class="md-menu-align-target"}}
            <span>{{item.title}}</span>
          {{/paper-menu-item}}
        {{/each}}

        {{#paper-menu-item action="openSomething" disabled=true}}
          {{paper-icon "adb" class="md-menu-align-target"}}
            <span>This is disabled.</span>
        {{/paper-menu-item}}

        {{paper-divider}}

        {{#each items as |item|}}
          {{#paper-menu-item action="openSomething"}}
            {{paper-icon item.icon class="md-menu-align-target"}} {{item.title}}
          {{/paper-menu-item}}
        {{/each}}
      {{/paper-menu}}
</div>

<h2>Template</h2>

{{#code-block language='handlebars'}}\{{#paper-menu as |menu|}}
  \{{#paper-button target=menu action="toggleMenu" icon-button=true}}
      \{{paper-icon "local-phone" class="md-menu-origin"}}
  \{{/paper-button}}
\{{else}}
  \{{#each items as |item|}}
    \{{#paper-menu-item action="openSomething"}}
      \{{paper-icon item.icon class="md-menu-align-target"}}
      &lt;span&gt;\{{item.title}}&lt;/span&gt;
    \{{/paper-menu-item}}
  \{{/each}}
\{{/paper-menu}}{{/code-block}}

