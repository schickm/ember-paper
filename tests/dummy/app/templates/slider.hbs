{{#paper-toolbar}}
    <div class="md-toolbar-tools">
      {{#paper-sidenav-toggle as |toggle|}}
        {{#paper-button target=toggle action="toggleMenu" icon-button=true}}{{paper-icon "menu"}}{{/paper-button}}
      {{/paper-sidenav-toggle}}
        <span class="md-breadcrumb-page">Slider</span>
    </div>
{{/paper-toolbar}}

{{#paper-content class="md-padding"}}
<div class="doc-content">
  <h3>
    RGB <span style={{colorStyle}}>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
  </h3>

  <div layout>
    <div flex="10" layout layout-align="center center">
      <span>R</span>
    </div>
    {{paper-slider flex=true min='0' max='255' value=color.red}}
    <div flex="20" layout layout-align="center center">
      {{input type="number" value=color.red}}
    </div>
  </div>

  <div layout>
    <div flex="10" layout layout-align="center center">
      <span>G</span>
    </div>
    {{paper-slider flex=true min='0' max='255' value=color.green class='md-accent'}}
    <div flex="20" layout layout-align="center center">
      {{input type="number" value=color.green}}
    </div>
  </div>

  <div layout>
    <div flex="10" layout layout-align="center center">
      <span>B</span>
    </div>
    {{paper-slider flex=true min='0' max='255' value=color.blue class='md-primary'}}
    <div flex="20" layout layout-align="center center">
      {{input type="number" value=color.blue}}
    </div>
  </div>

  <h3>Rating: {{rating}}/5 - demo of theming classes</h3>
  <div layout>
    <div flex="10" layout layout-align="center center">
      <span>default</span>
    </div>
    {{paper-slider flex=true discrete=true value=rating1 step='1' min='1' max='5'}}
  </div>
  <div layout>
    <div flex="10" layout layout-align="center center">
      <span>md-warn</span>
    </div>
    {{paper-slider flex=true warn=true discrete=true value=rating2 step="1" min="1" max="5"}}
  </div>
  <div layout>
    <div flex="10" layout layout-align="center center">
      <span>md-primary</span>
    </div>
    {{paper-slider flex=true primary=true discrete=true value=rating3 step="1" min="1" max="5"}}
  </div>

  <h3>Disabled</h3>
  {{paper-slider value=disabled1 disabled=true}}
  {{paper-slider value=disabled2 disabled=true}}

  <h3>Disabled, Discrete</h3>
  {{paper-slider value=disabled1 disabled=true step="3" discrete=true min="0" max="10"}}
  {{paper-slider value=disabled2 disabled=true step="10" discrete=true}}

  <h3>Template</h3>
  {{#code-block language='handlebars'}}
    &lt;h3&gt;
      RGB &lt;span style=\{{colorStyle}}&gt;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&lt;/span&gt;
    &lt;/h3&gt;

    &lt;div layout&gt;
      &lt;div flex="10" layout layout-align="center center"&gt;
        &lt;span&gt;R&lt;/span&gt;
      &lt;/div&gt;
      \{{paper-slider flex=true min='0' max='255' value=color.red}}
      &lt;div flex="20" layout layout-align="center center"&gt;
        \{{input type="number" value=color.red}}
      &lt;/div&gt;
    &lt;/div&gt;

    &lt;div layout&gt;
      &lt;div flex="10" layout layout-align="center center"&gt;
        &lt;span&gt;G&lt;/span&gt;
      &lt;/div&gt;
      \{{paper-slider flex=true min='0' max='255' value=color.green class='md-accent'}}
      &lt;div flex="20" layout layout-align="center center"&gt;
        \{{input type="number" value=color.green}}
      &lt;/div&gt;
    &lt;/div&gt;

    &lt;div layout&gt;
      &lt;div flex="10" layout layout-align="center center"&gt;
        &lt;span&gt;B&lt;/span&gt;
      &lt;/div&gt;
      \{{paper-slider flex=true min='0' max='255' value=color.blue class='md-primary'}}
      &lt;div flex="20" layout layout-align="center center"&gt;
        \{{input type="number" value=color.blue}}
      &lt;/div&gt;
    &lt;/div&gt;

    &lt;h3&gt;Rating: \{{rating}}/5 - demo of theming classes&lt;/h3&gt;
    &lt;div layout&gt;
      &lt;div flex="10" layout layout-align="center center"&gt;
        &lt;span&gt;default&lt;/span&gt;
      &lt;/div&gt;
      \{{paper-slider flex=true discrete=true value=rating1 step='1' min='1' max='5'}}
    &lt;/div&gt;
    &lt;div layout&gt;
      &lt;div flex="10" layout layout-align="center center"&gt;
        &lt;span&gt;md-warn&lt;/span&gt;
      &lt;/div&gt;
      \{{paper-slider flex=true warn=true discrete=true value=rating2 step="1" min="1" max="5"}}
    &lt;/div&gt;
    &lt;div layout&gt;
      &lt;div flex="10" layout layout-align="center center"&gt;
        &lt;span&gt;md-primary&lt;/span&gt;
      &lt;/div&gt;
      \{{paper-slider flex=true primary=true discrete=true value=rating3 step="1" min="1" max="5"}}
    &lt;/div&gt;

    &lt;h3&gt;Disabled&lt;/h3&gt;
    \{{paper-slider value=disabled1 disabled=true}}
    \{{paper-slider value=disabled2 disabled=true}}

    &lt;h3&gt;Disabled, Discrete&lt;/h3&gt;
    \{{paper-slider value=disabled1 disabled=true step="3" discrete=true min="0" max="10"}}
    \{{paper-slider value=disabled2 disabled=true step="10" discrete=true}}
  {{/code-block}}
</div>
{{/paper-content}}
